        <TextBox x:Name="login" SelectionBrush="Blue" Margin="158,49,191,267"/>
        <PasswordBox x:Name="password"  SelectionBrush="Blue" Margin="158,112,191,204" />
        <Button x:Name="registrate"  Background="LightGray" Margin="158,182,191,138" Content="Войти" Click="registrate_Click"/>
        <TextBlock Margin="108,246,294,75"><Hyperlink NavigateUri="Registration.xaml"><Run Text="Зарегистрироваться"/></Hyperlink></TextBlock>
        <TextBlock Margin="295,246,113,75"><Hyperlink NavigateUri="Deleting.xaml"><Run Text="Удалить аккаунт"/></Hyperlink></TextBlock>
        <TextBlock x:Name="enterPassword" Text ="Введите пароль "  Margin="158,88,227,238"/>
    </Grid>
</Page>
