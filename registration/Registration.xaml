<Page x:Class="registration.Registration"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:registration"
      mc:Ignorable="d" 
      Background="White"
      Title="Регистрация" Height="350" Width="525">

    <Grid>
        <TextBox x:Name="login" SelectionBrush="Blue" Margin="158,38,191,278" />
        <PasswordBox x:Name="password" SelectionBrush="Blue" Margin="158,101,191,215" />
        <PasswordBox x:Name="passwordCopy" SelectionBrush="Blue" Margin="158,167,191,149" />
        <Button x:Name="registrate"  Background="LightGray" Margin="158,238,191,82" Content="Зарегистрироваться" Click="add_Click"/>
        <TextBlock Margin="158,294,191,27" TextAlignment="Center"><Hyperlink NavigateUri="Authorization.xaml"><Run Text="На главную"/></Hyperlink></TextBlock>
        <TextBlock x:Name="enterLogin" Text ="Введите логин "  Margin="158,14,227,312"/>
        <TextBlock x:Name="enterPassword" Text ="Введите пароль "  Margin="158,77,227,249"/>
        <TextBlock x:Name="enterPasswordCopy" Text ="Повторите пароль"  Margin="158,143,227,183"/>
    </Grid>
</Page>
