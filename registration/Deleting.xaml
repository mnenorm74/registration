<Page x:Class="registration.Deleting"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:registration"
      mc:Ignorable="d" 
      Background="White"
      Title="Регистрация" Height="350" Width="525">

    <Grid>
        <TextBox x:Name="login" SelectionBrush="Blue" Margin="158,49,191,267" />
        <PasswordBox x:Name="password" SelectionBrush="Blue" Margin="158,112,191,204" />
        <Button x:Name="delete"  Background="LightGray" Margin="158,182,191,138" Content="Удалить" Click="delete_Click"/>
        <TextBlock Margin="158,250,191,71" TextAlignment="Center"><Hyperlink NavigateUri="Authorization.xaml"><Run Text="На главную"/></Hyperlink></TextBlock>
        <TextBlock x:Name="enterLogin" Text ="Введите логин "  Margin="158,25,227,301"/>
        <TextBlock x:Name="enterPassword" Text ="Введите пароль "  Margin="158,88,227,238"/>
    </Grid>
</Page>
